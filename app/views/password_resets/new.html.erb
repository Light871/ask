<% provide :page_title, 'Log In' %>
<% currently_at 'Log In' %>

<h1 class="mb-4">Log In</h1>

<%= form_with url: password_reset_path do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :email %>
    </div>

    <div class="col-sm-10">
      <%= f.email_field :email, value: params[:email], placeholder: 'Email',
        class: 'form-control', required: true %>
    </div>
  </div>

  <%= f.submit "Log In", class: 'btn btn-primary' %>
  <%= link_to "back", new_session_path, class: 'btn btn-secondary' %>
<% end %>